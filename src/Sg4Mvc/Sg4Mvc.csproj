<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0</TargetFrameworks>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>1701;1702;1591</NoWarn>
		<LangVersion>10</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>SG4MVC</PackageId>
		<Authors>Mark Flanagan, Kevin Kuszyk, Scott Mackay, Artiom Chilaru</Authors>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/SG4MVC/SG4MVC</PackageProjectUrl>
		<RepositoryUrl>https://github.com/SG4MVC/SG4MVC</RepositoryUrl>
		<Title>SG4MVC</Title>
		<Description>Runtime helpers used by code generated by Sg4Mvc.Generator</Description>
		<PackageTags>aspnetcore;mvc;r4mvc;source generator;sg4mvc</PackageTags>
		<VersionPrefix>0.9.2-beta</VersionPrefix>
		<!-- Leaving the assembly version static, to prevent assembly binding and assembly redirect issues.
    Only the major version will ever be updated -->
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<PackageReleaseNotes>
			+ Fixed package reference
		</PackageReleaseNotes>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<IsPackable>true</IsPackable>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<DebugType>embedded</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
		<PackageReference Include="Microsoft.AspNetCore.Routing.Abstractions" Version="2.2.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.2.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Sg4Mvc.Generator\Sg4Mvc.Generator.csproj" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(OutputPath)\net6.0\Sg4Mvc.Generator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

</Project>
